<div class="main-news-card p-2 flex flex-col items-center">

	<div class="flex w-5/6 gap-2">
		{% set webMenu = web_page_get_list(1,100) %}
		{% for page in webMenu.records %}
			<div class="flex w-1/3  rounded-lg overflow-hidden shadow-2xl" >
			<div class="flex flex-col gap-2">
			<img class="h-[200px] w-auto object-cover" src="/storage/covers/{{page.coverImage}}"/>
			<a href="/lihat-berita/berita-detail/{{page.slug}}" class="text-center text-lg min-h-[3em] font-bold py-1 hover:text-green-300">{{page.title}}</a>
        	<p class="text-sm text-justify px-4 pb-4">{{page.highlight}}</p>
			</div>
			
			</div>
		{% endfor %}
	</div>


</div>