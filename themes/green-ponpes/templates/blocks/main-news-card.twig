<div class="main-news-card p-2 flex flex-col items-center">
  <div class="lg:grid lg:grid-cols-3  lg:w-5/6 gap-2">
    {% set webMenu = web_page_get_list(1,100) %}
    {% for page in webMenu.records %}
      <div class="flex  rounded-lg overflow-hidden shadow-xl">
        <div class="flex flex-col gap-2 pb-4">
          <img class="lg:h-[200px] w-full object-cover" src="/storage/covers/{{page.coverImage}}"/>
          <a
            href="/lihat-berita/berita-detail/{{page.slug}}"
            class="text-center text-lg min-h-[3em] font-bold py-1 hover:text-green-300"
          >
            {{- page.title -}}
          </a>
          <p class="text-sm  text-justify px-4 line-clamp-3 overflow-hidden">{{ page.highlight |striptags}}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
