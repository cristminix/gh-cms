<div class="news-post-with-cover-image-card-list p-2 flex flex-col items-center">
	<div class="flex items-center gap-2">
		<span class="bi bi-newspaper text-3xl"></span>
		<p class="text-xl"><span class="font-bold">Berita</span><span> Ponpes Kanzul Ulum</span></p>
	</div>
	<div class="flex w-5/6 flex-col mt-5 lg:flex-row lg:items-center lg:justify-end lg:mt-0">
		{% set webMenu = web_page_get_list(1,100) %}
		{% for page in webMenu.records %}
			<a class="inline-flex items-center gap-x-3 dark:text-white text-zinc-800 font-bold p-2 gap-2 hover:bg-green-500 hover:text-white" href="/lihat-berita/berita-detail/{{page.slug}}">
			<div class="flex flex-col gap-2">
			<img src="/storage/covers/{{page.coverImage}}"/>
			<span class="text-center min-h-[3em]">{{page.title}}</span>
	
			</div>
			
			</a>
		{% endfor %}
	</div>

</div>
