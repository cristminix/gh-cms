<div class="news-post-with-cover-image-card-list p-2 flex flex-col items-center">
	<div class="flex items-center gap-2">
		<span class="bi bi-newspaper text-3xl"></span>
		<p class="text-xl"><span class="font-bold">Berita</span><span> Ponpes Kanzul Ulum</span></p>
	</div>
	<div class="lg:w-5/6 lg:mx-auto mt-5 lg:grid lg:grid-cols-3 lg:mt-0">
		{% set webMenu = web_page_get_list(1,100) %}
		{% for page in webMenu.records %}
			<a class="flex items-center gap-x-3 dark:text-white text-zinc-800 font-bold p-2 gap-2 hover:bg-green-500 hover:text-white" href="/lihat-berita/berita-detail/{{page.slug}}">
			<div class="flex flex-col gap-2">
			<img class="lg:h-[220px] flex-grow object-cover lg:rounded-lg" src="/storage/covers/{{page.coverImage}}"/>
			<span class="text-center min-h-[3em] px-2">{{page.title}}</span>
	
			</div>
			
			</a>
		{% endfor %}
	</div>

</div>
